{
  "version": 2,
  "builds": [
    {
      "src": "api/*.go",
      "use": "@vercel/go"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/v1/validate",
      "dest": "/api/validate.go"
    },
    {
      "src": "/health",
      "dest": "/api/health.go"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
